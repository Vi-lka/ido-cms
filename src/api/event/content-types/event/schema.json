{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "События",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "additionalImages": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "text": {
      "type": "blocks",
      "required": true
    },
    "order": {
      "type": "integer",
      "required": false,
      "unique": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::events-category.events-category",
      "inversedBy": "events"
    },
    "date": {
      "type": "component",
      "repeatable": false,
      "component": "custom.date-component",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 600
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "custom.rich-text",
        "custom.files-list",
        "custom.slider",
        "custom.video-embed",
        "custom.video"
      ]
    }
  }
}
